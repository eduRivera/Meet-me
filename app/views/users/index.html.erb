<%= flash_messages %>
<h1>USERS</h1>
<ul>
	<% @users.each do |user| %>
	<li>
		<% if user.name.present? %>
		 Name: <%= link_to user.name, user_path(user)%> -
		 email: <%= user.email %> -
		 Password: <%= user.pwd %> -
		 <%= link_to "Edit", edit_user_path(user) %>
		 <%= link_to "Delete",user_path(user),:method => :delete, data: {confirm: "Are you shure?"}%>
		</li>
		<% end %>
		</li>

		<% end %>
	</ul>

</ul>
<%= link_to "New", new_user_path%>
