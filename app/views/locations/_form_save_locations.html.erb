<%if @location.errors.any? %>
	<ul>
		<% @location.errors.full_messages.each do |error_message| %>
		<li> <%= error_message %> </li>
		<%end%>
	</ul>
<%end%>
	<%= form_for [@location] do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<br>
		<%= f.label :city %>
		<%= f.text_field :city %>
		<br>
		<%= f.label :country %>
		<%= f.text_field :country %>
		<br>
		<%= f.fields_for :comments do |comment_form| %>
           <%= comment_form.hidden_field :id %>
           <%= comment_form.text_field :description %>
           <% if comment_form.object.id? %>
	           <%= comment_form.label :destroy %>
	           <%= comment_form.check_box :_destroy %>
           <% end %>
     	<% end %>
		<%= f.submit "Save" %>
	<% end %>